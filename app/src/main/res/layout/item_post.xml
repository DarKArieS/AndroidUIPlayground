<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="150dp"
                                                   android:clickable="true"
                                                   android:focusable="true"
                                                   android:background="?attr/selectableItemBackground"
>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userPic"
            app:srcCompat="@drawable/ic_account_circle_black_24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="somebody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usetName" app:layout_constraintStart_toEndOf="@+id/userPic"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/userPic"
            app:layout_constraintBottom_toBottomOf="@+id/userPic"/>
    <TextView
            android:text="TitleTitleTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/postTitle" android:textSize="18sp"
            android:textStyle="bold" android:textColor="@android:color/black" android:ellipsize="end"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/userPic"
            app:layout_constraintStart_toStartOf="@+id/userPic"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/thumbImage"/>
    <TextView
            android:text="AbstractAbstractAbstract"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/postAbstract" app:layout_constraintStart_toStartOf="@+id/userPic"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/postTitle"
            app:layout_constraintEnd_toStartOf="@+id/thumbImage" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/ic_insert_photo_black_24dp"
            android:id="@+id/thumbImage" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:visibility="visible"/>
</androidx.constraintlayout.widget.ConstraintLayout>